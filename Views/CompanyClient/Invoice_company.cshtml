@model AC_Car_Service_.Models.NewOrderCmpy
@{
    ViewBag.Title = "Invoice_company";
    Layout = "~/Views/Shared/_LayoutClientCmpny.cshtml";
}

<div class="container" style="background-color:white; float:right; width:72%; height:auto; border-radius:7%; margin-right:60px;">
    <form action="/CompanyClient/SaveInvoiceCmpy1" method="post">
        <div class="row">
            <div class="col-md-4" id="form-style">
                <input id="InvoiceNo" name="InvoiceNo" type="text" class="form-control" placeholder="Invoice No" required style="margin-left: 12%; width: 90%; height: 45px; border-width: 2px; border-color: #12A8F1;" value="" />
            </div>
            <div class="col-md-4" id="form-style">
                <input id="CmpyNo" name="CmpyNo" type="text" class="form-control" placeholder="Company No" required style="margin-left: 12%; width: 90%; height: 45px; border-width: 2px; border-color: #12A8F1;" value="" />
            </div>
            <div class="col-md-4" id="form-style">
                <input id="OrdersFrom" name="OrdersFrom" type="date" class="form-control" placeholder="Orders From" required style="margin-left: 12%; width: 90%; height: 45px; border-width: 2px; border-color: #12A8F1;" value="" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-4" id="form-style">
                <input id="OrderTo" name="OrderTo" type="date" class="form-control" placeholder="Order To" required style="margin-left: 12%; width: 90%; height: 45px; border-width: 2px; border-color: #12A8F1;" value="" />
            </div>
            <div class="col-md-4" id="form-style">
                <input id="InvoiceDate" name="InvoiceDate" type="date" class="form-control" placeholder="Invoice Date" required style="margin-left: 12%; width: 90%; height: 45px; border-width: 2px; border-color: #12A8F1;" value="" />
            </div>
            <div class="col-md-4" id="form-style">
                <input id="OCR" name="OCR" type="text" class="form-control" placeholder="OCR" required style="margin-left: 12%; width: 90%; height: 45px; border-width: 2px; border-color: #12A8F1;" value="" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-4" id="form-style">
                <input id="ExpDate" name="ExpDate" type="date" class="form-control" placeholder="Expire Date" required style="margin-left: 12%; width: 90%; height: 45px; border-width: 2px; border-color: #12A8F1;" value="" />
            </div>
            <div class="col-md-4" id="form-style">
                <input id="OurReference" name="OurReference" type="text" class="form-control" placeholder="Our Reference" required style="margin-left: 12%; width: 90%; height: 45px; border-width: 2px; border-color: #12A8F1;" value="" />
            </div>
            <div class="col-md-4" id="form-style">
                <input id="ContactPerson" name="ContactPerson" type="text" class="form-control" placeholder="Contact Person" required style="margin-left: 12%; width: 90%; height: 45px; border-width: 2px; border-color: #12A8F1;" value="" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-4" id="form-style">
                <input id="Interest" name="Interest" type="text" class="form-control" placeholder="Interest" required style="margin-left: 12%; width: 90%; height: 45px; border-width: 2px; border-color: #12A8F1;" value="" />
            </div>
            <div class="col-md-4" id="form-style">
                <input id="ReminderFee" name="ReminderFee" type="text" class="form-control" placeholder="Reminder Fee" required style="margin-left: 12%; width: 90%; height: 45px; border-width: 2px; border-color: #12A8F1;" value="" />
            </div>
            <div class="col-md-4" id="form-style">
                <input id="UserName" name="UserName" type="text" class="form-control" placeholder="User Name" required style="margin-left: 12%; width: 90%; height: 45px; border-width: 2px; border-color: #12A8F1;" value="" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12" id="form-style">
                <input id="OrderNo" name="OrderNo" type="text" class="form-control" placeholder="Order No" value="@Model.Id" readonly required style="margin-left: 12%; width: 90%; height: 45px; border-width: 2px; border-color: #12A8F1;" />
            </div>
        </div>

        <input type="submit" id="fbutton" value="Create My Invoice" style="width:200px;" />


    </form>
</div>



