@{
    ViewBag.Title = "FinishOrderCmpy";
    Layout = "~/Views/Shared/_LayoutClientCmpny.cshtml";
}

<div class="container-fluid  " style="background-color: white; overflow-y: auto; overflow-x: auto; height: 80%; width:55%; margin-left:33%; border-radius: 7%;">
    <h1 style="color:black; font-weight:700; font-family:Gabriola; text-align:left; margin-left:10px; font-size:50px;">Fininsh Order>Company</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>License Plate</th>
                <th>Chassi Number</th>
                <th>Company List</th>
                <th>Contact Person</th>
                <th>Service Category</th>
                <th>Service</th>
                <th>Choosen Service</th>
                <th>Order Description</th>
                <th>Action</th>
            </tr>
            @foreach (var x in Model)
            {
                <tr>
                    <td>
                        @x.licensePlate
                    </td>
                    <td>
                        @x.chassiNo
                    </td>
                    <td>
                        @x.companyList
                    </td>
                    <td>
                        @x.contactPerson
                    </td>
                    <td>
                        @x.serviceCategory
                    </td>
                    <td>
                        @x.service
                    </td>
                    <td>
                        @x.choosenService
                    </td>
                    <td>
                        @x.orderDescription
                    </td>
                    <td>
                        <div class="btn-group">
                            <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                                <span> Action</span>
                            </button>
                            <ul class="dropdown-menu stay-open pull-right" role="menu" style="padding: 15px; min-width: 100px;">
                                <li><a href="/CompanyClient/updateFC/@x.Id">Update</a></li>
                                <li><a href="/CompanyClient/DeleteCmpyFinish/@x.Id">Delete</a></li>
                                <li><a href="/CompanyClient/Invoice_company/@x.Id">Invoice</a></li>
                            </ul>
                        </div>
                    </td>

                </tr>
            }
        </thead>
    </table>
</div>
