@{
    ViewBag.Title = "NewOrdercmpy";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container" style="background-color:white; float: right; margin-right:70px; margin-top:30px; width: 72%; height: auto; border-radius: 7%; margin-left: 160px; ">
    <form class="form-inline" role="form">
        <h1 style="color:black; font-weight:700; font-family:Gabriola; text-align:left; margin-left:25px; font-size:50px;">New Order>Company</h1>
        <div class="row">
            <div class="col-sm-4" id="form-style">
                <input type="number" class="form-control" placeholder="License Plate" required style="margin-left: 12%; width: 90%; height: 45px; border-width: 2px; border-color: #12A8F1;">
            </div>
            <div class="col-sm-4" id="form-style">
                <input type="number" class="form-control" placeholder="Chassi Number" required style="margin-left: 12%; width: 90%; height: 45px; border-width: 2px; border-color: #12A8F1;">
            </div>
            <div class="col-sm-4" id="form-style">
                <select class="form-control" required style="margin-left: 12%; width: 90%; height: 45px; border-width: 2px; border-color: #12A8F1;">
                    <option value="contact person">Contact Person</option>
                    <option value="contact person">1</option>
                    <option value="contact person">2</option>
                    <option value="contact person">3</option>
                </select>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-4" id="form-style">
                <select class="form-control" required style="margin-left: 12%; width: 90%; height: 45px; border-width: 2px; border-color: #12A8F1;">
                    <option value="Company List">Company List</option>
                    <option value="Company List">1</option>
                    <option value="Company List">2</option>
                    <option value="Company List">3</option>
                </select>
            </div>
            <div class="col-sm-4" id="form-style">
                <select class="form-control" required style="margin-left: 12%; width: 90%; height: 45px; border-width: 2px; border-color: #12A8F1;">
                    <option value="service category">Service Category</option>
                    <option value="service category">1</option>
                    <option value="service category">2</option>
                    <option value="service category">3</option>
                </select>
            </div>
            <div class="col-sm-4" id="form-style">
                <select class="form-control" required style="margin-left: 12%; width: 90%; height: 45px; border-width: 2px; border-color: #12A8F1;">
                    <option value="Service">Service</option>
                    <option value="Service">1</option>
                    <option value="Service">2</option>
                    <option value="Service">3</option>
                </select>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12" id="form-style">
                <input type="text" class="form-control" placeholder="Chosen Service(s)" required style="margin-left: 12%; width: 90%; height: 45px; border-width: 2px; border-color: #12A8F1;">
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6" id="form-style">
                <textarea class="form-control" name="message" placeholder="Order description" required style="margin-left: 12%; width: 900px; height: 80px; border-width: 2px; border-color: #12A8F1;"></textarea>
            </div>
        </div>

        <button type="submit" id="fbutton">
            Save Order
        </button>
    </form>
</div>
