@{
    ViewBag.Title = "adminCheck";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container" style="background-color:white; float:right; width:72%; height:auto; border-radius:7%; margin-right:70px;">
    <h1 style="color:black; font-weight:700; font-family:Gabriola; text-align:left; margin-left:10px; font-size:50px;">New Cars</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Car Model</th>
                <th>Car Color</th>
            </tr>
            @foreach (var x in Model)
            {
                <tr>
                    <td>
                        @x.Name
                    </td>
                    <td>
                        @x.Email
                    </td>
                    <td>
                        @x.phoneNo
                    </td>
                    <td>
                        @x.carModel
                    </td>
                    <td>
                        @x.carColor
                    </td>
                </tr>
            }
        </thead>
    </table>
</div>


