@{
    ViewBag.Title = "Feedback";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid  " style="background-color: white; overflow-y: auto; overflow-x: auto; height: 80%; width:55%; margin-left:33%; border-radius: 7%;">
    <h1 style="color:black; font-weight:700; font-family:Gabriola; text-align:left; margin-left:10px; font-size:50px;">Feedback</h1>
    <table class="table table-striped" id="header-fixed">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Message</th>
                <th>Action</th>
            </tr>
            @foreach (var x in Model)
            {
                <tr>
                    <td>
                        @x.Name
                    </td>
                    <td>
                        @x.Email
                    </td>
                    <td>
                        @x.Msg
                    </td>
                    <td>
                        <div class="btn-group">
                            <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                                <span> Action</span>
                            </button>
                            <ul class="dropdown-menu stay-open pull-right" role="menu" style="padding: 15px; min-width: 100px;">
                                <li><a href="/Admin/Deletefeedback/@x.Id">Delete</a></li>
                            </ul>
                        </div>
                    </td>

                </tr>
            }
        </thead>
    </table>
</div>

