@{
    ViewBag.Title = "User";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid  " style="background-color: white; overflow-y: auto; overflow-x: auto; height: 80%; width:55%; margin-left:33%; border-radius: 7%;">
    <h1 style="color:black; font-weight:700; font-family:Gabriola; text-align:left; margin-left:10px; font-size:50px;">User</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>User Name</th>
                <th>PIN</th>
                <th>Re-enter PIN</th>
                <th>Email</th>
                <th>First Name</th>
                <th>Sur Name</th>
                <th>Role</th>
                <th>Type</th>
                <th>Measure</th>

            </tr>
            @foreach (var x in Model)
            {
                <tr>
                    <td>
                        @x.userName
                    </td>
                    <td>
                        @x.PIN
                    </td>
                    <td>
                        @x.re_enter
                    </td>
                    <td>
                        @x.email
                    </td>
                    <td>
                        @x.firstName
                    </td>
                    <td>
                        @x.surName
                    </td>
                    <td>
                        @x.role
                    </td>
                    <td>
                        @x.type
                    </td>
                    <td>
                        <div class="btn-group">
                            <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                                <span>Action</span>
                            </button>
                            <ul class="dropdown-menu stay-open pull-right" role="menu" style="padding: 15px; min-width: 100px;">
                                <li><a href="/Admin/DeleteLogin/@x.Id">Delete</a></li>
                            </ul>
                        </div>
                    </td>

                </tr>
            }
        </thead>
    </table>
</div>